<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@collegeapp.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CollegeApp.CollegeAppController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="569.0" prefWidth="369.0">
         <children>
            <Label prefHeight="67.0" prefWidth="309.0" text="Select a program you are enrolled in:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <CheckBox fx:id="chkIB" mnemonicParsing="false" onAction="#chkIBSelect" prefHeight="18.0" prefWidth="132.0" text="IB">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="chkAP" mnemonicParsing="false" onAction="#chkAPselect" prefHeight="55.0" prefWidth="128.0" text="AP">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <Separator prefWidth="200.0" />
            <Label prefHeight="80.0" prefWidth="282.0" text="Where are you going to college?">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <RadioButton fx:id="radNA" mnemonicParsing="false" onAction="#radNASelect" prefHeight="42.0" prefWidth="151.0" text="North America">
               <font>
                  <Font size="18.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="regionGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radEU" mnemonicParsing="false" onAction="#radEUSelect" prefHeight="49.0" prefWidth="159.0" text="Europe" toggleGroup="$regionGroup">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radAS" mnemonicParsing="false" onAction="#radASSelect" prefHeight="38.0" prefWidth="133.0" text="Asia" toggleGroup="$regionGroup">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
            <TextArea fx:id="txtResult" prefHeight="236.0" prefWidth="369.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>

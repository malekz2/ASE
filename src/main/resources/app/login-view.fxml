<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.Pane?>
<AnchorPane prefHeight="600.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gradebook.LoginController"
            stylesheets="@auth.css"
            style="
              -fx-background-image: url(pizza_bg.png);
              -fx-background-size: contain;              /* show full photo */
              -fx-background-repeat: no-repeat;
              -fx-background-position: center center;">
   <children>

      <!-- Gradient overlay ON TOP of the image -->
      <Pane mouseTransparent="true"
            style="-fx-background-color: linear-gradient(to bottom right, rgba(255,123,0,0.65), transparent);"
            AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>

      <!-- Your existing controls -->
      <TextField fx:id="usernameid" layoutX="123.0" layoutY="183.0"
                 prefHeight="26.0" prefWidth="254.0" promptText="Username"/>
      <PasswordField fx:id="passid" layoutX="123.0" layoutY="233.0"
                     prefHeight="26.0" prefWidth="254.0" promptText="Password"/>
      <Button fx:id="btnLogin" layoutX="123.0" layoutY="293.0"
              prefHeight="46.0" prefWidth="254.0"
              text="LOGIN" onAction="#lblCklckLogin"/>
      <Hyperlink fx:id="lblSignUp" layoutX="148.0" layoutY="359.0"
                 text="Dont have an account yet? SIGN UP"
                 onAction="#lblClckSignUp"/>
   </children>
</AnchorPane>

